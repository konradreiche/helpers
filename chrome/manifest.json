{
  "manifest_version": 2,
  "name": "Helpers Chrome extension",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://localhost:*/*"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://localhost:*/*"]
  },
  "browser_action": {
  },
  "background": {
    "scripts": ["background.js"]
  },
 "permissions": ["desktopCapture"]
}
